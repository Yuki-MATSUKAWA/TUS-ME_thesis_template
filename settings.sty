    \\\vspace{12mm}
    {\large \@affiliation}
    \\\vspace{6mm}
    {\large \@laboratory}
    \\\vspace{18mm}
    {\large \@author}
  \end{center}
  \newpage
  \thispagestyle{empty}
}

