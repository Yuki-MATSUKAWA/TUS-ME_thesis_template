%%% 表紙の定義 \makecover %%%
\newcommand\makecover{
  \thispagestyle{empty}
  \vspace*{35mm}
  \begin{center}
    {\large \@thesis}
    \\\vspace{12mm}
    {\Large \@title}
    \\\vspace{60mm}
    {\large \@date}
    \\\vspace{12mm}
    {\large \@affiliation}
    \\\vspace{6mm}
    {\large \@laboratory}
    \\\vspace{18mm}
    {\large \@author}
  \end{center}
  \newpage
  \thispagestyle{empty}
}



